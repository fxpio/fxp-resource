<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_resource.domain_manager.class">Sonatra\Bundle\ResourceBundle\Domain\DomainManager</parameter>
    </parameters>

    <services>
        <!-- Domain Manager -->
        <service id="sonatra_resource.domain_manager" class="%sonatra_resource.domain_manager.class%">
            <argument type="collection" />
            <argument type="service" id="doctrine" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="sonatra_default_value.factory" />
        </service>
    </services>
</container>
